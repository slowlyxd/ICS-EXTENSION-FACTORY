<krpano>
    <action name="showmenu">
        tween(layer[menulogo].x, get(layer[menulogo].x_opened), 0.5, easeOutQuint);
        tween(layer[menulayer].x, get(layer[menulayer].x_opened), 0.5, easeOutQuint);
        set(layer[arrmenu].x, 28);
        set(layer[arrmenu].y, 62);
        set(layer[arrmenu].rotate, -180.0);
        set(layer[menulayer].state,'opened');
    </action>

     <action name="hidemenu">
         tween(layer[menulogo].x, get(layer[menulogo].x_closed), 0.5, easeOutQuint);
         tween(layer[menulayer].x, get(layer[menulayer].x_closed), 0.5, easeOutQuint);
         set(layer[arrmenu].x, 0);
         set(layer[arrmenu].y, 0);
         set(layer[arrmenu].rotate, 0.0);
         set(layer[menulayer].state,'closed');
    </action>

    <action name="changemenu">
         if(layer[menulayer].state == 'opened',hidemenu();,showmenu(););
    </action>

<layer name="iconmenu" type="container" keep="true" enabled="true" scale="0.5"
    style="skin_img_menu"
    x="0" y="30"
    align="topleft"
    zorder="15"
    >
    <layer name="arrmenu" url="images/arrow.png" x="28" y="62" align="topleft" scale="0.5"
        onclick="changemenu()"
        rotate="-180.0"
    />
</layer>

<layer name="menulogo" type="container" keep="true" enabled="true" visible="true" align="topleft" x="0" y="0" x_opened="0" x_closed="-280" width="280" height="150"
        bgcolor="0xFFFFFF" bgalpha="0.6"
        zorder="2"
        >
        <layer name="logo_menu" url="images/Logo.png" keep="true" visible="true" align="lefttop" x="40" y="0" zorder="15"
            width="200"
            height="100"
            bgcolor="0xFFFFFF" bgalpha="0.6"
            />
</layer>
<layer name="menulayer" type="container" keep="true" enabled="true" visible="true" align="topleft" x="0" y="150" x_opened="0" x_closed="-280" width="280" height="35%"
        bgcolor="0xFFFFFF" bgalpha="0.6"
        zorder="2"
        >
        <layer name="mgtext_0" style="skin_textmenu_group_style" align="lefttop" x="0" y="0"
                       html="EXTENSION FACTORY"
                       />


            <layer name="menuscroller" url="%SWFPATH%/plugins/scrollarea.swf" alturl="%SWFPATH%/plugins/scrollarea.js"
                    direction="v"  align="lefttop" width="100%" height="1500"
                    draggable="true"
                    mwheel="true"
                >
                <layer name="object_g1_1"  style="skin_textmenu_style" align="lefttop" x="0" y="35"
                        html="Overview"
                        onclick="loadscene(scene_view_1,null,MERGE,BLEND(0.5));hidemenu();" />
                <layer name="object_g1_2"  style="skin_textmenu_style" align="lefttop" x="0" y="70"
                        html="Front View"
                        onclick="loadscene(scene_view_2,null,MERGE,BLEND(0.5));hidemenu();" />
                <layer name="object_g1_3"  style="skin_textmenu_style" align="lefttop" x="0" y="105"
                        html="Left View"
                        onclick="loadscene(scene_view_3,null,MERGE,BLEND(0.5));hidemenu();" />
                
                <layer name="object_g1_4"  style="skin_textmenu_style" align="lefttop" x="0" y="140"
                        html="Back View"
                        onclick="loadscene(scene_view_4,null,MERGE,BLEND(0.5));hidemenu();" />

                <layer name="object_g1_5"  style="skin_textmenu_style" align="lefttop" x="0" y="175"
                        html="Production View"
                        onclick="loadscene(scene_view_5,null,MERGE,BLEND(0.5));hidemenu();" />
                <layer name="object_g1_6"  style="skin_textmenu_style" align="lefttop" x="0" y="210"
                        html="Canteen"
                        onclick="loadscene(scene_view_6,null,MERGE,BLEND(0.5));hidemenu();" />
                <layer name="object_g1_7"  style="skin_textmenu_style" align="lefttop" x="0" y="245"
                        html="Meeting Room"
                        onclick="loadscene(scene_view_7,null,MERGE,BLEND(0.5));hidemenu();" />
                
            </layer>

    </layer>
<style name="skin_textmenu_style" url="%SWFPATH%/plugins/textfield.swf" width="100%" height="30"
    background="false" border="false"
    padding="5 10"
    margin="5"
    css="text-align:left; color:#000000; font-family:Arial; font-weight:nomal; font-size:16px;"
    onover="set(background,true);set(backgroundcolor,0x5abfcb); set(backgroundalpha,0.8);"
    onout="set(background,false)"
    />
<style name="skin_textmenu_group_style" url="%SWFPATH%/plugins/textfield.swf" width="100%" height="30"
    enabled="false" background="true" border="false"
    backgroundcolor="0x87773e" backgroundalpha="0.8"
    padding="5 10"
    css="text-align:left; color:#000000; font-family:Arial; font-weight:nomal; font-size:15px;"
     />
<style name="skin_img_menu" url="images/sbo.png" />
</krpano>
